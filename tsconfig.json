{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "types": [
      "node",
      "jasmine"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "test.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ]
}